<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    android:focusable="true"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/launcherbluesmall"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="600dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="500dp">
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:visibility="gone"
                android:text="LOGIN TO YOUR VSERVE++ ACCOUNT"
                android:textSize="16sp"

                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="500dp"
                android:id="@+id/username"
                android:paddingLeft="30dp"
                android:layout_marginTop="30dp"
                android:hint="Username"
                android:textSize="24sp"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textColor="#65000000"
                android:background="@drawable/whitebackgroud"
                android:layout_height="80dp"/>
            <LinearLayout
                android:layout_width="500dp"
                android:orientation="horizontal"
                android:background="@drawable/whitebackgroud"
                android:layout_marginTop="50dp"
                android:layout_height="80dp">
            <EditText
                android:layout_width="460dp"
                android:layout_weight="1"
                android:id="@+id/password"
                android:paddingLeft="30dp"
                android:background="@null"
                android:textSize="24sp"
                android:inputType="textPassword"
                android:imeOptions="actionDone"

                android:hint="Password"
                android:textColor="#65000000"
                android:layout_height="80dp"/>
                <ImageView
                    android:id="@+id/show_pass_btn"
                    android:layout_width="40dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:src="@mipmap/show1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/laypass"
                    app:layout_constraintTop_toTopOf="@+id/edit_password" />
            </LinearLayout>
            <TextView
                android:layout_width="160sp"
                android:id="@+id/button"
                android:text="LOGIN"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_marginTop="50dp"
                android:layout_marginRight="50dp"
                android:textColor="#888888"
                android:textSize="24sp"

                android:background="@drawable/whitebackgroudblack"
                android:layout_height="60dp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>