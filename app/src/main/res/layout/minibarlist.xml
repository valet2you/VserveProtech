<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    app:cardElevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="5dp"
    android:layout_height="230dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/drop_shadow"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/bottom"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="49dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:id="@+id/colorimage"
                    android:layout_weight="0.5"
                    android:gravity="center"

                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="20sp"
                        android:button="@null"
                        android:text="456767"
                        android:textColor="@color/black"
                        android:id="@+id/roomno"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_height="match_parent"/>


                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:background="#F1F1F1"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="03:15 PM"
                        android:layout_marginRight="5dp"
                        android:textStyle="italic"
                        android:id="@+id/since"
                        android:paddingTop="5dp"
                        android:gravity="right"
                        android:textColor="@color/gray"

                        android:textSize="8sp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/guest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="5"

                        android:textColor="@color/black"
                        android:textSize="20sp" />


                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="#F1F1F1"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
             android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="10dp"
                        android:textColor="@color/blue"
                        android:id="@+id/orderstatustext"

                        android:text="Order Status"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/orderstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Paid through online"
                        android:textColor="@color/black"

                        android:textSize="12sp" />


                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="#F1F1F1"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:layout_height="29dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="0.9"
                        android:textSize="16dp"
                        android:textColor="@color/gray"
                        android:id="@+id/status"

                        android:text="In Kitchen"
                        android:textAllCaps="true"
                        android:paddingLeft="5dp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/orderreceived"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:text="03:10:00 pm"
                        android:textColor="@color/gray"

                        android:textSize="13sp" />


                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="#F1F1F1"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/ordeitems"
                    android:layout_alignParentTop="true"
                    android:layout_above="@+id/more"
                    android:layout_height="60dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="2 more items"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="6sp"
                    android:textColor="#666666"
                    android:layout_above="@+id/idjj"
                    android:id="@+id/more"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:id="@+id/idjj"
                    android:background="#F1F1F1"
                    android:layout_alignParentBottom="true"
                    android:layout_height="1dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:text="Order Instructions"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:textColor="@color/gray"
                 android:layout_height="wrap_content"></TextView>
<TextView
    android:layout_width="match_parent"
    android:text="Not spicy"
    android:visibility="gone"
    android:textColor="@color/black"
    android:id="@+id/instrctions"
    android:maxLines="2"
    android:minLines="2"
    android:textSize="12sp"
    android:padding="5dp"
    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/bottom"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:background="#F1F1F1"
                android:layout_height="1dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#EEEEEE"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_height="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:id="@+id/dispatch"
                    android:text="Accept"
                    android:textAllCaps="true"
                    android:textColor="#80000000"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
