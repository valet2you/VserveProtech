<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/top"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_keyboard_backspace_black_24dp"
                android:padding="10dp"
                android:id="@+id/back"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:textSize="16sp"

                android:text="Order Summary"
                android:textAllCaps="true"
                android:textColor="@color/reddark"
                android:id="@+id/title"
                android:gravity="center"
                android:padding="10dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#F1F1F1"
            android:id="@+id/view1"
            android:layout_below="@+id/top"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/middle"
            android:layout_below="@id/view1"
            android:layout_height="49dp">
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:id="@+id/colorimage"
                android:layout_weight="0.5"
                android:gravity="center"

                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/blue"
                        android:id="@+id/ordertext"
                        android:layout_marginLeft="10dp"
                        android:text="Order No."
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:id="@+id/orderid"
                        android:text="445145"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/blue"
                        android:id="@+id/table"
                        android:layout_marginLeft="10dp"
                        android:text="Table No."
                        android:gravity="center"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="20sp"
                        android:button="@null"
                        android:text="456767"
                        android:textColor="@color/black"
                        android:id="@+id/roomno"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>



            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:background="#F1F1F1"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:text="03:15 PM"
                    android:layout_marginRight="5dp"
                    android:textStyle="italic"
                    android:id="@+id/since"
                    android:paddingTop="5dp"
                    android:gravity="right"
                    android:textColor="@color/gray"

                    android:textSize="8sp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/blue"
                        android:id="@+id/guesttext"
                        android:layout_marginLeft="10dp"
                        android:text="No. of Guests"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/guest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="5"

                        android:textColor="@color/black"
                        android:textSize="20sp" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#F1F1F1"
            android:id="@+id/view2"
            android:layout_below="@+id/middle"
            android:layout_height="1dp"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_below="@+id/view2"
            android:scrollbars="vertical"
            android:layout_above="@+id/bottom"
            android:id="@+id/bleooo"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="ORDER ITEMS"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:id="@+id/orderitemsdetailtext"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:id="@+id/orderitemsdetail"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:background="#F1F1F1"
                    android:layout_height="1dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="ORDER INSTRUCTIONS"
                    android:padding="10dp"
                    android:id="@+id/orderins"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text=""
                    android:id="@+id/orderinsdetails"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:background="#F1F1F1"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="ORDER Accepted at"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:id="@+id/accepttext"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text=" - "
                    android:id="@+id/accepted"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:background="#F1F1F1"
                    android:layout_height="1dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="ORDER SERVED at"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:id="@+id/distpatchtext"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text=" - "
                    android:id="@+id/dispactch"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="ORDER STATUS"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:id="@+id/statustext"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Paid through Online Paymtnt"
                    android:visibility="gone"
                    android:id="@+id/status"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:background="#F1F1F1"
                    android:layout_height="1dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/bottom"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:background="#F1F1F1"
                android:layout_height="1dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#EEEEEE"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_height="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:id="@+id/dispatch"
                    android:text="Accept"
                    android:textAllCaps="true"
                    android:textColor="#80000000"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>


            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:background="#F1F1F1"
                android:layout_marginBottom="10dp"
                android:layout_height="1dp"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
