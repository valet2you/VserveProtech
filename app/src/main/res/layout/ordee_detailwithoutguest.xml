<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout android:id="@+id/top"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:background="@color/darkblue"
        android:layout_height="50dp">
        <ImageView android:id="@+id/back"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/white"
            android:src="@drawable/ic_keyboard_backspace_black_24dp" />

        <LinearLayout
            android:id="@+id/top1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5.0dip">

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Order Summary"
                android:textColor="@color/gold"
                android:textSize="16.0sp" />

        </LinearLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/middle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_above="@+id/bootom"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:background="#F1F1F1"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="49dp">
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:id="@+id/colorimage"
                android:layout_weight="0.5"
                android:gravity="center"

                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lasttext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Last Name"
                            android:layout_marginLeft="5dp"

                            android:textColor="@color/gray"
                            android:textSize="10dp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:visibility="gone"
                        android:background="#F1F1F1"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="18sp"
                        android:button="@null"
                        android:text=""
                        android:textColor="@color/black"
                        android:id="@+id/roomno"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:background="#F1F1F1"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="0.4"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:text="03:15 PM"
                    android:layout_marginRight="5dp"
                    android:id="@+id/since"
                    android:paddingTop="5dp"
                    android:gravity="right"
                    android:textColor="@color/lightgrey"

                    android:textSize="10sp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/guesttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="No. of guests"
                        android:layout_marginLeft="5dp"

                        android:textColor="@color/gray"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/guest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""

                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:background="#F1F1F1"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:visibility="gone"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/takewaay"

                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:textColor="@color/redblood"
                    android:id="@+id/orderway"

                    android:text="DINE-IN"

                    android:gravity="center"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#F1F1F1"
            android:layout_height="1dp"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="ORDER ITEMS"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:id="@+id/orderitemsdetailtext"
            android:textSize="12sp"
            android:textColor="@color/golddark"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:id="@+id/orderitemsdetail"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:background="#F1F1F1"
            android:layout_height="1dp"/>

            <TextView
                android:id="@+id/orderins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="ORDER INSTRUCTIONS"
                android:textColor="@color/blue"
                android:textSize="12sp" />

            <TextView
            android:layout_width="match_parent"
            android:text=""
            android:id="@+id/orderinsdetails"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:background="#F1F1F1"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:text="ORDER Accepted at"
            android:padding="10dp"
            android:textAllCaps="true"
            android:id="@+id/accepttext"
            android:textSize="12sp"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:text=" - "
            android:id="@+id/accepted"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"/>
            <View
            android:layout_width="match_parent"
            android:background="#F1F1F1"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:text="ORDER DISPATCHED at"
            android:padding="10dp"
            android:textAllCaps="true"
            android:id="@+id/dispatchedtext"
            android:textSize="12sp"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:text=" - "
            android:id="@+id/dispatched"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:background="#F1F1F1"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:text="PAYMENT STATUS"
            android:padding="10dp"
            android:textAllCaps="true"
            android:id="@+id/statustext"
            android:textSize="12sp"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:text=""
            android:id="@+id/status"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"/>

        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/bootom"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">


        <View
            android:layout_width="match_parent"
            android:background="#F1F1F1"
            android:layout_height="1dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#EEEEEE"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_height="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:id="@+id/dispatch"
                android:text="Accept"
                android:textAllCaps="true"
                android:textColor="#80000000"
                android:gravity="center"
                android:layout_height="wrap_content"/>


        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:background="#F1F1F1"
            android:layout_marginBottom="10dp"
            android:layout_height="1dp"/>
    </LinearLayout>

</RelativeLayout>